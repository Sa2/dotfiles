# ls
alias l='ls -FG'
alias ls='ls -FG'
## 隠しファイル表示
alias la='ls -aFG'
## 詳細を表示する
alias ll='ls -alFG' # for basic ls

# cd
alias ..='cd ../'
alias ...='cd ../../'

# git
alias gb='git branch'
alias gs='git status'
alias gst='git status'
alias gl='git log'
alias gp='git pull --prune'
alias gd='git diff'

# vim alias
alias v='nvim'
alias vi='nvim'
